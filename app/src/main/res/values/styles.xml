<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ExpandedTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="CollapsedTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Modern Button Style -->
    <style name="ModernButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">30dp</item>
        <item name="elevation">8dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">40dp</item>
    </style>

    <!-- Modern Card Style -->
    <style name="ModernCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
    </style>
</resources>
