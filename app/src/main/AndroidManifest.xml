<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Camera feature - not required for all devices -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PRM392_EVCare"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterActivity" android:exported="false" />
        <activity android:name=".ForgotPasswordActivity" android:exported="false" />
        <activity android:name=".MainActivity" android:exported="false" />
        <activity android:name=".HomeActivity" android:exported="false" />
        <activity android:name=".ServiceCentersActivity" android:exported="false" />
        <activity android:name=".SelectServiceActivity" android:exported="false" />
        <activity android:name=".ConfirmBookingActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ProfileActivity" android:exported="false" />
        <activity android:name=".EditProfileActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".UploadAvatarActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ChangePasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ManageVehiclesActivity" android:exported="false" />
        <activity android:name=".AddVehicleActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".EditVehicleActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".BookingActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".BookingHistoryActivity" android:exported="false" />

        <!-- Payment Result Activity (from devbao branch) -->
        <activity
            android:name=".PaymentResultActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Deep link scheme for payment callback -->
                <data
                    android:scheme="evcare"
                    android:host="payment"
                    android:pathPrefix="/result" />
            </intent-filter>
            <!-- Optional: Support https deep link so a web returnUrl can open the app -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- TODO: Replace 'yourdomain.com' with your real website domain -->
                <data
                    android:scheme="https"
                    android:host="yourdomain.com"
                    android:pathPrefix="/payment/result" />
                <!-- Also handle explicit cancel path if your web uses it -->
                <data
                    android:scheme="https"
                    android:host="yourdomain.com"
                    android:pathPrefix="/payment/cancel" />
                <!-- Optional catch-all for other payment paths (ensure it matches your site structure) -->
                <data
                    android:scheme="https"
                    android:host="yourdomain.com"
                    android:pathPrefix="/payment" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PaymentWebViewActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".PaymentOutcomeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Technician Activities (from main branch) -->
        <activity
            android:name=".TechnicianDashboardActivity"
            android:exported="false"
            android:label="Technician Dashboard"
            android:theme="@style/Theme.PRM392_EVCare" />
        <activity
            android:name=".TechnicianScheduleActivity"
            android:exported="false"
            android:label="Schedule"
            android:theme="@style/Theme.PRM392_EVCare" />
        <activity
            android:name=".TechnicianServicesActivity"
            android:exported="false"
            android:label="My Services"
            android:theme="@style/Theme.PRM392_EVCare" />
        <activity
            android:name=".TechnicianChatActivity"
            android:exported="false"
            android:label="Chat"
            android:theme="@style/Theme.PRM392_EVCare" />
        <activity
            android:name=".TechnicianHistoryActivity"
            android:exported="false"
            android:label="Service History"
            android:theme="@style/Theme.PRM392_EVCare" />
        <activity
            android:name=".TechnicianSettingsActivity"
            android:exported="false"
            android:label="Settings"
            android:theme="@style/Theme.PRM392_EVCare" />
    </application>

</manifest>